<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Calculator Suite" parallel="methods" thread-count="2">
    <test name="Basic arithmetical functions Double Inputs">
        <parameter name="ad" value="3.5"/>
        <parameter name="bd" value="2.15"/>
        <groups>
            <run>
                <exclude name="exception"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.module2.arithmetical.SumDoubleTest">
                <parameter name="result" value="5.65"/>
            </class>
            <class name="com.epam.module2.arithmetical.SubtractionDoubleTest">
                <parameter name="result" value="1.35"/>
            </class>
            <class name="com.epam.module2.arithmetical.MultiplicationDoubleTest"/>
            <class name="com.epam.module2.arithmetical.DivisionDoubleTest"/>
        </classes>
    </test>
    <test name="Basic arithmetical functions Long Inputs">
        <parameter name="a" value="-3"/>
        <parameter name="b" value="3"/>
        <classes>
            <class name="com.epam.module2.arithmetical.SumLongTest">
                <parameter name="result" value="0"/>
            </class>
            <class name="com.epam.module2.arithmetical.SubtractionLongTest">
                <parameter name="result" value="-6"/>
            </class>
            <class name="com.epam.module2.arithmetical.MultiplicationLongTest"/>
            <class name="com.epam.module2.arithmetical.DivisionLongTest"/>
        </classes>
    </test>
    <test name="Exceptions">
        <groups>
            <run>
                <include name="exception"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.module2.arithmetical.DivisionDoubleTest"/>
            <class name="com.epam.module2.arithmetical.DivisionLongTest"/>
        </classes>
    </test>
    <test name="Trigonometric functions">
        <classes>
            <class name="com.epam.module2.trigonometrics.CosineTest"/>
            <class name="com.epam.module2.trigonometrics.SineTest"/>
            <class name="com.epam.module2.trigonometrics.TangentTest"/>
            <class name="com.epam.module2.trigonometrics.CotangentTest"/>
        </classes>
    </test>
    <test name="Other functions">
        <classes>
            <class name="com.epam.module2.others.PowTest"/>
            <class name="com.epam.module2.others.SqrtTest"/>
            <class name="com.epam.module2.others.NegativeValueCheck"/>
            <class name="com.epam.module2.others.PositiveValueCheck"/>
        </classes>
    </test>
</suite>
